@using Entities
@model List<Company>
@{
    ViewBag.Title = "StateVillage";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";

}
<div class="fl fw page-main">
    <section class="fl fw collapaseBox">
        <h3 class="fl fw">
            <i class="i-user"></i>
            <span>Add / Edit User</span>
        </h3>
        <div class="fl fw section-container">
            @using (Html.BeginForm("RegisterCompanyUser", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <ul class="fl fw ul-form-group">
                    <li>
                        <div class="col-xs-12 col-lg-4">
                            <div class="fl fw input-group">
                                <label for="" class="fl fw">First Name</label>
                                <input type="text" name="firstName" id="firstName" class="fl fw frmElement">
                            </div>
                        </div>
                        <div class="col-xs-12 col-lg-4">
                            <div class="fl fw input-group">
                                <label for="" class="fl fw">Last Name</label>
                                <input type="text" name="lastName" id="lastName" class="fl fw frmElement">
                            </div>
                        </div>
                        <div class="col-xs-12 col-lg-4">
                            <div class="fl fw input-group">
                                <label for="" class="fl fw">User Name</label>
                                <input type="text" id="userName" name="userName" class="fl fw frmElement">
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="col-xs-12 col-lg-4">
                            <div class="fl fw input-group">
                                <label for="" class="fl fw">Password</label>
                                <input type="text" id="passWord" name="passWord" class="fl fw frmElement">
                            </div>
                        </div>
                        <div class="col-xs-12 col-lg-4">
                            <div class="fl fw input-group">
                                <label for="" class="fl fw">Email</label>
                                <input type="text" id="email" name="email" class="fl fw frmElement">
                            </div>
                        </div>
                        <div class="col-xs-12 col-lg-4">
                            <div class="fl fw input-group">
                                <label for="" class="fl fw">Phone Number</label>
                                <input type="text" id="phoneNumber" name="phoneNumber" class="fl fw frmElement">
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="col-xs-12 col-lg-4">
                            <div class="fl fw input-group">
                                <label for="" class="fl fw">Company</label>
                                <select name="company" id="company" class="fl fw frmElement">
                                    <option value="0">Select Company</option>
                                    @foreach (var item in Model)
                                    {
                                        <option value="@item.Id">@item.CompanyName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-xs-12 col-lg-4">
                            <div class="fl fw input-group">
                                <label for="" class="fl fw">User Type</label>
                                <select name="userType" id="userType" class="fl fw frmElement">
                                    <option value="0">Select Type</option>
                                    <option value="1">Admin</option>
                                    <option value="0">Employee</option>
                                </select>
                            </div>
                        </div>
                    </li>
                    <li>
                        @if (ViewBag.Message != null)
                        {
                            <div class="col-xs-12 col-lg-4">
                                <div class="fl fw input-group">
                                    <label for="" style="color:red" class="fl fw">@ViewBag.Message</label>
                                </div>
                            </div>
                        }

                        <div class="col-xs-12 col-lg-12">
                            <div class="fl fw input-group">
                                <input type="submit" value="Save" id="" name="register" class="fr btn">
                            </div>
                        </div>
                    </li>
                </ul>
            }
        </div>
    </section>
    <section class="fl fw">
        <h3 class="fl fw">
            <i class="i-user"></i>
            <span>Company User (s)</span>
        </h3>
        <div class="fl fw section-container">
            <div id="UserTableContainer" class="fl fw"></div>
        </div>
    </section>
</div>
@section scripts{<!-- Validation engine style file -->
    <!-- Validation engine script file and english localization -->
 <script src="~/Scripts/JqueryJtable.js"></script>
<script src="~/Scripts/JqueryUIJtable.js"></script>
<script src="~/Scripts/jtable/jquery.jtable.js"></script>


<script src="~/Scripts/register.js"></script>
<script src="~/Scripts/jtable/validationEngine/jquery.validationEngine.js"></script>

<script src="~/Scripts/jtable/validationEngine/jquery.validationEngine-en.js"></script>
    
}